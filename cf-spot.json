			"LaunchConfigurationName" : { "Ref" : "ImhotepLaunchConfig" },
			"DesiredCapacity" : { "Ref" : "NumImhotepInstances" },
			"MaxSize" : { "Ref" : "NumImhotepInstances" },
			"MinSize" : { "Ref" : "NumImhotepInstances" },
			"Tags" : [ {
				"Key" : "Name",
				"Value" : "Imhotep Server",
				"PropagateAtLaunch" : "true"
			} ]
		}
