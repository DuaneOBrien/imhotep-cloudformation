									"--index-loc",
									{ "Fn::Join" : [ "", [ "s3n://", { "Ref" : "BuildBucket" }, "/iupload/tsvtoindex" ] ] },
									"--success-loc",
									{ "Fn::Join" : [ "", [ "s3n://", { "Ref" : "BuildBucket" }, "/iupload/indexedtsv" ] ] },
									"--failure-loc",
									{ "Fn::Join" : [ "", [ "s3n://", { "Ref" : "BuildBucket" }, "/iupload/failed" ] ] },
									"--data-loc",
